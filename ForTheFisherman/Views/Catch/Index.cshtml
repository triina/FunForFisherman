@model IEnumerable<ForTheFisherman.Models.Catch>

@{
    ViewBag.Title = "Index";
}

    <!-- If the user is redirected to this page after trying to delete a catch unsuccessfully a message box is displayed-->
   @{if(null != TempData["deleteErrorMessage"])
   {
      <script type="text/javascript">
          alert("@TempData["deleteErrorMessage"]");
      </script>
   }}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th class="hidden">
            @Html.DisplayNameFor(model => model.cId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lureweight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.depth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lure.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FishSpecies.fishname)
        </th>
        
        <th class="controls-width"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="hidden">
            @Html.DisplayFor(modelItem => item.cId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lureweight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.depth)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Lure.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FishSpecies.fishname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.cId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.cId })
        </td>
    </tr>
}

</table>